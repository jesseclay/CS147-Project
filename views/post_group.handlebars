<!doctype html>

<html>
<head>
	<title>Post Group</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;" />
  	<meta name="apple-mobile-web-app-capable" content="yes">
	<link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/general.css" rel="stylesheet">
    <link href="css/login.css" rel="stylesheet">
    <link href="css/home.css" rel="stylesheet">
    <link href="bootstrap-datepicker/css/datepicker.css" rel="stylesheet">
    <link href="timepicker/jquery.timepicker.css" rel="stylesheet">
    <link href="css/post_group.css" rel="stylesheet">
    <script type="text/javascript">

	  if(("standalone" in window.navigator) && window.navigator.standalone){
	  var noddy, remotes = false;
	  document.addEventListener('click', function(event) {
	  noddy = event.target;
	  while(noddy.nodeName !== "A" && noddy.nodeName !== "HTML") {
	    noddy = noddy.parentNode;
	  }
	  if('href' in noddy && noddy.href.indexOf('http') !== -1 && (noddy.href.indexOf(document.location.host) !== -1 || remotes))
	  {
	    event.preventDefault();
	    document.location.href = noddy.href;
	  }
	  },false);
	  }
	  </script>
</head>

<body class="cbp-spmenu-push cbp-spmenu-push-toleft">
	
	{{> navbar this}}
	
	<div class="container">
		<div class="post_group">
		<form class="form-signin" role="form" method="get" action="/post_group_add">
			<h2 class="form-signin-heading">Group Info</h2>
			<br>
			<input type="hidden" name="classname" value="{{title}}">
			<input type="text" class="form-control" id="descript" placeholder="Group Name" name="groupname" required autofocus>
          	<br>
			<input type="text" class="form-control date start" placeholder="Start Date" name="start_date" required>

			<input type="text" class="form-control time start" placeholder="Start Time" name="start_time" required>

			<input type="text" class="form-control date end" placeholder="End Date" name="end_date" required>

			<input type="text" class="form-control time end" placeholder="End Time" name="end_time" required>
			<br>
			<select class="form-control" id="locationSelector" name="location">
				<option id="currLoc" value="Custom Location" selected>Current Location</option>
				{{#each locData}}
				  <option value="{{name}}" data-lat="{{lat}}" data-lng="{{lng}}">{{name}}</option>
				{{/each}}
			</select>

			<input id="hiddenLat" type="hidden" name="latitude" value="">

			<input id="hiddenLng" type="hidden" name="longitude" value="">

			<input id="customLocationName" class ="form-control" placeholder="Location Name" type="text" name="customLocationName"style="display: default;">
			<br>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Post</button>
    	</form>
		</div>

	</div>

	
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script type="text/javascript" src="bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
	<script type="text/javascript" src="timepicker/jquery.timepicker.js"></script>
	<script type="text/javascript" src="datepicker/jquery.datepair.js"></script>

	<script>
	    // initialize input widgets first
	    $('.form-signin .time').timepicker({
	        'showDuration': true,
	        'scrollDefaultNow': true,
	        'typeaheadHighlight': true,
	        'timeFormat': 'g:ia',
	        'disableTouchKeyboard':true
	    });

	    $('.form-signin .date').datepicker({
	        'format': 'm/d/yyyy',
	        'autoclose': true,
	        'startDate' : '-1d',
	        'todayHighlight' : true
	    });

	    $('.date').unbind("click").bind("click", function(){$(this).blur();});

	    // initialize datepair
	    $('.form-signin').datepair();
	    $('.ui-timepicker-wrapper').css('width', $('#descript').outerWidth()+"px");
	</script>
	
	<script src="js/pushMenu.js"></script>
	<script src="js/post_groupEvents.js"></script>

</body>
</html>
